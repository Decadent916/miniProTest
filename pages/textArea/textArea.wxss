page{
  background: #f5f5f5;
  padding: 20rpx;
  box-sizing: border-box;
}
.text-con{
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
}
.mask{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: rgba(0, 0, 0, .5);
  z-index: 1000;
}
.white-con{
  position: fixed;
  top: 0;
  width: 500rpx;
  height: 300rpx;
  background: #fff;
  border-radius: 8rpx;
  z-index: 1000;
}